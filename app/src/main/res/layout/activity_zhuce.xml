<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.ZhuceActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/beijing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141931"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@drawable/shapes"
            android:textColor="#fff"
            android:hint="请输入您要的昵称"
            android:padding="@dimen/dp_0_1"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/user"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:background="@drawable/shapes"
            android:hint="请输入邮箱账号"
            android:padding="@dimen/dp_0_1"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/pwdd"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:background="@drawable/shapes"
            android:hint="请输入邮箱密码"
            android:padding="@dimen/dp_0_1"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />

        <RelativeLayout
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_weight="1"
                android:background="@drawable/shapes"
                android:hint="请输入验证码"
                android:padding="@dimen/dp_0_1"
                android:textColor="#fff"
                android:textColorHint="#999999"
                android:textSize="@dimen/dp_20" />

            <Button
                android:id="@+id/Obtain"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:background="@drawable/shapesbutton"
                android:text="获取验证码"
                android:textColor="#333333" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_10"
            android:text="已有密码  立即登录"
            android:textColor="#999999"
            android:textSize="@dimen/dp_15" />


        <Button
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/sel"
            android:id="@+id/regist"
            android:text="注册"
            android:textColor="#ffff"
            android:textSize="@dimen/dp_20" />


    </LinearLayout>
</LinearLayout>