<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DengluActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/beijing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141931"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailzh"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@drawable/shapes"
            android:hint="请输入邮箱账号"
            android:padding="@dimen/dp_0_1"
            android:textColor="#fff"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />

        <RelativeLayout
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_weight="1"
                android:background="@drawable/shapes"
                android:hint="请输入密码"
                android:padding="@dimen/dp_0_1"
                android:password="true"
                android:textColor="#fff"
                android:textColorHint="#999999"
                android:textSize="@dimen/dp_20" />

            <Button
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:background="@drawable/shapesbutton"
                android:text="忘记密码"
                android:textColor="#333333" />
        </RelativeLayout>

        <TextView
            android:id="@+id/zc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_10"
            android:text="暂无账号 立即注册"
            android:textColor="#999999"
            android:textSize="@dimen/dp_15" />

        <Button
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/sel"

            android:id="@+id/dl"
            android:text="登录"
            android:textColor="#ffff"
            android:textSize="@dimen/dp_20" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_73"
                android:layout_marginTop="@dimen/dp_29"
                android:background="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_20"
                android:text="或"
                android:textColor="#ffffff" />

            <View
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_29"
                android:background="#ffffff" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/wxdl"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/shapesweixinlogin"

            android:src="@drawable/weixin_copy_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>
</LinearLayout>