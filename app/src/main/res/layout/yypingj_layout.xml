<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#141931"
    >
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        >
        <ImageView
            android:id="@+id/tx"
           android:background="@mipmap/ww"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_24"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冷月女神"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/dp_78"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04-24  09:15"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/nrong"
        android:layout_marginTop="@dimen/sp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:text="还可以吧，交通很方便，环境很好"
        android:textSize="@dimen/sp_12"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26">
        <ImageView
            android:id="@+id/com_dian"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/dianzan_1"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/com_zan"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"

            android:layout_marginRight="@dimen/dp_7"
            />
        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等3w+人进行了回复"
            android:textSize="@dimen/sp_10"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#141931"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_15"
        />
</LinearLayout>
