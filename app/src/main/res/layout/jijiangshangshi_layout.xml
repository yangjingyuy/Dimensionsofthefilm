<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="#1c2243">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:id="@+id/releasedmovie_tv_name"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/releasedmovie_tv_time"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15"
                android:id="@+id/releasedmovie_tv_usernum"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/buttonyuan"
                android:text="预约"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_gravity="center"
                android:id="@+id/releasedmovie_bt"
                android:layout_marginLeft="@dimen/dp_14"
                />

            <Button
                android:layout_width="@dimen/dp_45"
                android:background="#d3af56"
                android:text="已预约"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/reservation_bt"
                android:layout_marginLeft="@dimen/dp_14"
                />

        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        android:id="@+id/releasedmovie_iv"
        android:layout_marginLeft="@dimen/dp_24"
        />






</RelativeLayout>

