<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1c2243"
            >
            <ImageView
                android:id="@+id/seek_imager"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/seek_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/seek_imager"
                android:text="________"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/seek_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_toRightOf="@+id/seek_imager"
                android:text="________"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/seek_starring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_toRightOf="@+id/seek_imager"
                android:text="—————"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/seek_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="140dp"
                android:layout_toRightOf="@+id/seek_imager"
                android:text="—————"
                android:textColor="#fff"
                android:textSize="15sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="购票"
                android:textColor="#ffffff"
                android:id="@+id/yuy"
                android:layout_alignParentRight="true"
                android:layout_marginTop="140dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonyuan"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
