<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".view.XzyingyuanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer

            android:id="@+id/jc_yp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200" />
        <ImageView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/returnhot"
            />
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/dp_20"
    android:text="______"
    android:id="@+id/text_namexq"
    android:layout_marginLeft="@dimen/dp_20"
    android:textColor="#fff"


    />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="时间"

            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="评分"

            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="导演"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:layout_weight="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="______"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:layout_weight="1"
            android:id="@+id/tet_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="______"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:layout_weight="1"
            android:id="@+id/text_pf"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="______"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:layout_weight="1"
            android:id="@+id/text_dy"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="海淀区"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="今天05-14"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格最低"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/yp_recyc"
        ></android.support.v7.widget.RecyclerView>







</LinearLayout>