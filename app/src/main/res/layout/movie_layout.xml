<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    >

     <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       >
       <ImageView
           android:layout_width="20dp"
           android:layout_height="24dp"
           android:src="@mipmap/icon_location"
           android:layout_marginLeft="25dp"

           android:id="@+id/location"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="北京"
           android:textColor="#ffffff"
           android:layout_toRightOf="@+id/location"
           android:layout_marginLeft="20dp"

           />
       <ImageView
           android:layout_width="20dp"
           android:layout_height="24dp"
           android:src="@mipmap/icon_search"
           android:id="@+id/search"

           android:layout_alignParentRight="true"
           android:layout_marginRight="25dp"

           />

   </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.stx.xhb.xbanner.XBanner
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:id="@+id/xbander"
                ></com.stx.xhb.xbanner.XBanner
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1c2243"
                >
                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hot_showing"
                    android:id="@+id/hot_showing"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="正在热映"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/hot_showing"
                    android:layout_marginLeft="20dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:text="更多"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"

                    />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recy_hot"
                ></android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:background="#1c2243"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/show"
                    android:id="@+id/show"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="即将上映"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/show"
                    android:layout_marginLeft="20dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:text="更多"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"

                    />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="500dp"

                android:id="@+id/recyer_view2"
                ></android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:background="#1c2243"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hot"
                    android:id="@+id/hot"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="热门电影"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/hot"
                    android:layout_marginLeft="20dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:text="更多"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"

                    />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyer_view3"
                ></android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</LinearLayout>
