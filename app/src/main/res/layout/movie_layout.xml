<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    >

     <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_40"
       android:orientation="vertical"
       android:layout_marginTop="@dimen/dp_10"
       >
       <ImageView
           android:layout_width="@dimen/dp_20"
           android:layout_height="@dimen/dp_30"
           android:src="@mipmap/icon_location"
           android:layout_marginLeft="@dimen/dp_10"
           android:id="@+id/location"
           android:layout_centerVertical="true"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/sp_15"
           android:text="北京"
           android:layout_centerVertical="true"
           android:textColor="#ffffff"
           android:layout_toRightOf="@+id/location"
           android:layout_marginLeft="@dimen/dp_20"

           />
       <ImageView
           android:layout_width="@dimen/dp_20"
           android:layout_height="@dimen/dp_30"
           android:src="@mipmap/icon_search"
           android:id="@+id/search"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/dp_25"
           android:layout_centerVertical="true"

           />
   </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.stx.xhb.xbanner.XBanner
                android:layout_marginTop="@dimen/dp_80"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/xbander"
                ></com.stx.xhb.xbanner.XBanner
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="#1c2243"
                >
                <ImageView
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/hot_showing"
                    android:id="@+id/hot_showing"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="正在热映"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/hot_showing"
                    android:layout_marginLeft="@dimen/dp_20"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:textSize="@dimen/dp_15"
                    android:text="更多"

                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="@dimen/dp_20"

                    />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_margin="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recy_hot"
                ></android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:background="#1c2243"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                >
                <ImageView
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/show"
                    android:id="@+id/show"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_20"
                    android:text="即将上映"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/show"
                    android:layout_marginLeft="@dimen/dp_20"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="更多"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_15"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="@dimen/dp_20"

                    />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/recyer_view2"
                ></android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#1c2243"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                >
                <ImageView
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/hot"
                    android:id="@+id/hot"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_20"
                    android:text="热门电影"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/hot"
                    android:layout_marginLeft="@dimen/dp_20"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:textSize="@dimen/dp_15"
                    android:text="更多"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="@dimen/dp_20"

                    />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyer_view3"
                ></android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</LinearLayout>
